<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>summat</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>


	<!-- 
	<error-page> 
		<error-code>500</error-code> 
		<location>/errorpages/http500.jsp</location> 
	</error-page> 
	-->
	<error-page>
		<error-code>404</error-code>
		<location>/errorpages/http404.jsp</location>
	</error-page>

	<servlet>
		<servlet-name>geocode</servlet-name>
		<servlet-class>sm.util.GeocodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>geocode</servlet-name>
		<url-pattern>/api/geocode</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>reverse</servlet-name>
		<servlet-class>sm.util.ReverseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>reverse</servlet-name>
		<url-pattern>/api/reverse</url-pattern>
	</servlet-mapping>
</web-app>